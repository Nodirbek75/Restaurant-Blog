<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%=blog.title%></div>    
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label style="color: #4d1313;">Title</label>
            <input type="text" name="blog[title]" placeholder="Title" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label style="color: #4d1313;">Image URL</label>
            <input type="text" name="blog[image]" placeholder="Image URL" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label style="color: #4d1313;">Blog Content</label>
            <textarea name="blog[body]" id="" cols="30" rows="10"><%=blog.body%></textarea>
        </div>
        <button class="ui violet basic button" >Submit</button>
    </form>
</div>
<% include partials/footer %>